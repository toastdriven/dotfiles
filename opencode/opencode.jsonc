{
  "$schema": "https://opencode.ai/config.json",

  // Ref: https://opencode.ai/docs/permissions
  "permission": {
    "bash": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "edit": "ask",
    "webfetch": "allow",
  },

  // Ref: https://opencode.ai/docs/models
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "models": {
        // "gemma3": {},
        // "qwen3": {},
        "llama3": {
          "name": "Llama 3",
        },
        "gpt-oss:latest": {
          "name": "gtp-oss",
          "options": {
            "thinking": {
              "type": "disabled",
            },
          },
        },
      },
      "options": {
        "baseURL": "http://127.0.0.1:11434/v1",
      },
    },
  },
  "model": "ollama/gtp-oss",

  // Ref: https://opencode.ai/docs/themes
  "theme": "system",

  // Ref: https://opencode.ai/docs/tools
  "tools": {
    "bash": true,
    "edit": true,
    "glob": true,
    "grep": true,
    "list": true,
    "patch": true,
    "read": true,
    "todoread": true,
    "todowrite": true,
    "webfetch": true,
    "write": true,
  },

  // Ref: https://opencode.ai/docs/config/#tui
  // "tui": {
  //   "scroll_speed": 3,
  //   "scroll_acceleration": {
  //     "enabled": true,
  //   },
  // },
}
