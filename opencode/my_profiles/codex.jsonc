{
  "$schema": "https://opencode.ai/config.json",

  // Ref: https://opencode.ai/docs/permissions
  "permission": {
    "bash": "allow",
    "doom_loop": "ask",
    "external_directory": "ask",
    "edit": "allow",
    "webfetch": "allow",
  },

  // Ref: https://opencode.ai/docs/models
  "provider": {
    "openai": {
      "models": {
        "gpt-5.2-codex": {
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "medium",
            "reasoningSummary": "auto",
            // "include": ["reasoning.encrypted_content"],
          },
        },
      },
    },
  },
  "model": "openai/gpt-5.2-codex",

  // Ref: https://opencode.ai/docs/themes
  "theme": "orng",

  // Ref: https://opencode.ai/docs/tools
  "tools": {
    "bash": true,
    "edit": true,
    "glob": true,
    "grep": true,
    "list": true,
    "patch": true,
    "read": true,
    "todoread": true,
    "todowrite": true,
    "webfetch": true,
    "write": true,
  },

  // Ref: https://opencode.ai/docs/config/#tui
  // "tui": {
  //   "scroll_speed": 3,
  //   "scroll_acceleration": {
  //     "enabled": true,
  //   },
  // },
}
